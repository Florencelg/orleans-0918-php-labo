{% extends 'baseAdmin.html.twig' %}
{% block title %}Gestion des Salles{% endblock %}
    {% block body %}
        <main>
            <div class="container mt-5">
                <h2 class="text-center mt-5 mb-5">Liste des salles</h2>
                <div class="row">
                    <div class="col-md-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead class="text-center">
                            <tr>
                                <th>Nom de la salle</th>
                                <th>Nombre de portes</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tbody class="text-center">
                            {% for room in rooms %}
                                <tr>
                                    <td class="text-left">{{ room.name }}</td>
                                    <td>{{ room.door }}</td>
                                    <td><a href="{{ path('room_edit', {'id': room.id}) }}" class="badge badge-light"><i class="fas fa-pen"></i></a></td>
                                    <td><a href="{{ path('room_edit', {'id': room.id}) }}" class="badge badge-light"><i class="fas fa-trash-alt"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('room_new') }}">Create new</a>
                    </div>
                </div>
            </div>
        </main>
    {% endblock %}