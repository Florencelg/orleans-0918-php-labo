{% extends 'baseAdmin.html.twig' %}
{% block title %}Gestion des Salles{% endblock %}
    {% block body %}
        <main>
            <div class="container">
                <h2 class="text-center">Liste des salles</h2>
                <div class="row">
                    <div class="col-md-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead class="text-center">
                            <tr>
                                <th>Nom de la salle</th>
                                <th>Nombre de portes</th>
                                <th>Modifier</th>
                            </tr>
                            </thead>
                            <tbody class="text-center">
                            {% for room in rooms %}
                                <tr>
                                    <td class="text-left">{{ room.name }}</td>
                                    <td>{{ room.door }}</td>
                                    <td><a href="{{ path('room_edit', {'id': room.id}) }}" class="badge badge-light"><i class="fas fa-pen"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="row justify-content-center validbutton">
                            <a href="{{ path('room_new') }}" class="btn text-center style-button bg-gradient1 mx-auto"><span>Ajouter une salle</span></a>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="navigation">
                        {{ knp_pagination_render(rooms) }}
                    </div>
                </div>
            </div>
        </main>
    {% endblock %}