{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des Equipements{% endblock %}
{% block body %}
    <main>
        <div class="container mt-5">
            <h2 class="text-center mt-5 mb-5">Liste des Equipements</h2>
            <div class="row">
                <div class="col-md-12">
                    <table id="datatable" class="table table-striped table-bordered ">
                        <thead class="text-center">
                        <tr>
                            <th>Name</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                        {% for equipement in equipements %}
                            <tr>
                                <td>{{ equipement.name }}</td>
                                <td><a href="{{ path('equipement_show', {'id': equipement.id}) }}" class="badge badge-light"><i class="fas fa-pen"></i></a></td>
                                <td><a href="{{ path('equipement_edit', {'id': equipement.id}) }}" class="badge badge-light"><i class="fas fa-trash-alt"></i></a></td>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row justify-content-center addButton">
                        <a href="{{ path('equipement_new') }}" class="btn text-center style-button bg-gradient1 mx-auto"><span>Ajouter un Ã©quipement</span></a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}