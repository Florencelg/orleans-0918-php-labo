{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion du matériel{% endblock %}
{% block body %}
    <main>
        <div class="container">
            <h2 class="text-center mt-3">Liste du matériel</h2>
            <div class="row">
                <div class="col-md-12">
                    <table id="datatable" class="table table-striped table-bordered ">
                        <thead class="text-center">
                        <tr>
                            <th>Nom</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody class="text-center">
                        {% for equipement in equipements %}
                            <tr>
                                <td>{{ equipement.name }}</td>
                                <td><a href="{{ path('equipement_edit', {'id': equipement.id}) }}" class="badge badge-light"><i class="fas fa-pen"></i></a></td>
                                <td>{{ include('equipement/_delete_form.html.twig') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row justify-content-center validbutton">
                        <a href="{{ path('equipement_new') }}" class="btn text-center style-button bg-gradient1 mx-auto"><span>Ajouter du matériel</span></a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
